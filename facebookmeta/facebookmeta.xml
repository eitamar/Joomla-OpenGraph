<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="content">
      <name>Facebook meta tags</name>
      <author>Itamar Elharar</author>
      <creationDate>July 2011</creationDate>
      <copyright>Copyright (C) 2005 - 2011 Itamar Elharar. All rights reserved.</copyright>
      <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
      <authorEmail>eitamar@gmail.com</authorEmail>
      <authorUrl>www.israeljoomla.info</authorUrl>
      <version>1.0</version>
      <description>PLG_CONTENT_FACEBOOKMETA_XML_DESCRIPTION</description>

      <files>
            <filename plugin="facebookmeta">facebookmeta.php</filename>
            <filename>index.html</filename>
		<!--
			if you want to install the language files in the plugin folder.
			Create a "language" folder at the root of the pack i.e
			language/en-GB/en-GB.plg_content_example.ini
			language/en-GB/en-GB.plg_content_example.sys.ini
		-->
            <folder>language</folder>
      </files>
      <languages folder="language">
		<!--
			these files will be installed in the administrator/language folder.
		-->
            <language tag="en-GB">en-GB/en-GB.plg_content_facebookmeta.ini</language>
            <language tag="en-GB">en-GB/en-GB.plg_content_facebookmeta.sys.ini</language>
      </languages>

      <config>
            <fields name="params">
                  
                  
                  <fieldset name="basic">
                      <field name="default_image" type="imagelist" default="" label="Default image" description="select a default image that will be used in case no image found in article or category" directory="images" exclude="" stripext="" />
                        <field name="admins" type="text"
					description="PLG_FACEBOOKMETA_FIELDSET_ADMINS_DESC"
					label="PLG_FACEBOOKMETA_FIELDSET_ADMINS_LABEL"
				/>
                                         <field name="app_id" type="text"
					description="PLG_FACEBOOKMETA_FIELDSET_APPLICATION_ID_DESC"
					label="PLG_FACEBOOKMETA_FIELDSET_APPLICATION_ID_LABEL"
				/>
                  </fieldset>

                  <fieldset name="advanced">
                         <field name="field2" type="text"
					description="more info on http://developers.facebook.com/docs/opengraph/#types"
					label="Select Type"
				/>

                        <field name="field2" type="text"
					description="Example field 2"
					label="Example field 2"
				/>
                  </fieldset>

                
            </fields>
      </config>
</extension>
